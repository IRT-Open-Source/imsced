<tt xmlns="http://www.w3.org/ns/ttml" 
  xmlns:ttp="http://www.w3.org/ns/ttml#parameter" 
  xmlns:tts="http://www.w3.org/ns/ttml#styling" 
  xmlns:itts="http://www.w3.org/ns/ttml/profile/imsc1#styling" 
  xmlns:ebutts="urn:ebu:tt:style" xml:lang="en">
  <head>
    <layout>
      <region xml:id="r1" tts:origin="10% 10%" tts:extent="80% 40%" ebutts:linePadding="0.5c" tts:displayAlign="before" tts:writingMode="lrtb" tts:showBackground="whenActive" tts:backgroundColor="#00000000" tts:overflow="hidden" tts:opacity="1"/>
      <region xml:id="r2" tts:origin="10% 50%" tts:position="left 20% top 90%" tts:extent="80% 40%" tts:displayAlign="before" tts:writingMode="lrtb" tts:showBackground="whenActive" tts:backgroundColor="#00000000" tts:padding="1% 2%" tts:opacity="1" itts:forcedDisplay="true"/>
    </layout>
  </head>
  <body tts:backgroundColor="#000000ff" tts:lineHeight="200%">
    <div tts:fontWeight="normal">
      <p tts:color="#ffff00ff" tts:fontSize="90%" tts:fontFamily="Courier New" itts:fillLineGap="true" tts:textAlign="start" ebutts:multiRowAlign="auto" region="r1" begin="00:00:02.000" end="00:00:10.000">
        <span tts:fontStyle="italic" tts:backgroundColor="#008000ff" tts:display="auto">Hello, I am Mork from Ork!</span>
        <br/>
        <span tts:direction="ltr" tts:wrapOption="noWrap" tts:textShadow="10% 20% 5% #ffffffff" tts:unicodeBidi="normal">Hi, Mork from Ork!</span>
        <span tts:visibility="visible">I'm visible...</span>
      </p>
      <p tts:fontSize="80%" region="r2" begin="00:00:02.000" end="00:00:10.000">
        <span>This text should be displayed in all circumstances.</span>
      </p>
      <p tts:fontSize="80%" region="r2" begin="00:00:10.000" end="00:00:15.000">
        <span>だ</span>
        <span>ん</span>
      </p>
      <p tts:fontSize="80%" region="r2" tts:rubyReserve='both 1%' begin="00:00:15.000" end="00:00:20.000">
        <span tts:ruby="container" tts:rubyAlign="spaceAround">
          <span tts:ruby="base">利用許諾</span>
          <span tts:ruby="text">ライセンス</span>
        </span>
      </p>
      <p tts:fontSize="80%" region="r2" begin="00:00:20.000" end="00:00:25.000">
        <span tts:textCombine="all">AB34</span>
        <span>三四</span>
      </p>
      <p tts:fontSize="80%" region="r2" tts:shear="16.67%" begin="00:00:25.000" end="00:00:27.000">
        <span>
          <span>You </span>
          <span tts:textDecoration="lineThrough">couldn't</span>
          <span> could not see a cloud</span>
        </span>
      </p>
    </div>
  </body>
</tt>